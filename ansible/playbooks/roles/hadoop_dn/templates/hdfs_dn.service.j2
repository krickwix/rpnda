# {{ansible_managed}}

[Unit]
Description=hdfs datanode service

[Service]
Type=simple
User=root
Group=root
Environment=HADOOP_CONF_DIR=/opt/{{ hadoop_file_base }}/etc/hadoop
Environment=YARN_CONF_DIR=/opt/{{ hadoop_file_base }}/etc/hadoop
Environment=JAVA_HOME=/usr
ExecStart=/opt/{{ hadoop_file_base }}/bin/hdfs datanode
Restart=always
RestartSec=3
TimeoutSec=300

[Install]
WantedBy=multi-user.target
